<div class="text-center">
  <h1>User List</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to 'Show', root_path %></td>
        <td><%= link_to 'Edit',  "edit_user/#{user.id}"  %></td>
        <td><%= link_to 'Destroy', "delete/users/#{user.id}",method: :post, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
