<div class="text-center page-title">
  <h1>User List</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Created at</th>
      <th>Payment</th>
      <th>Stripe ID</th>
      <th>Sub ID</th>
      <th>paid at</th>
      <th>canceld at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at %></td>
        <td><%= user.payment %></td>
        <td><%= user.stripe_id %></td>
        <td><%= user.subscription_id %></td>

        <td>
          <% if user.purchase_date != nil %>
            <%= Time.at("#{user.purchase_date}".to_i).to_datetime %>
          <% else %>
            N/A
          <% end %>
        </td>

        <td><% if user.cancel_date != nil %>
              <%= Time.at("#{user.cancel_date}".to_i).to_datetime %>
            <% else %>
              N/A
          <% end %>
        </td>
        <td><%= link_to 'Show', root_path %></td>
        <td><%= link_to 'Edit',  "edit_user/#{user.id}"  %></td>
        <td><%= link_to 'Destroy', "delete/users/#{user.id}",method: :post, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
