<h1>Edit User</h1>

<%= form_tag("/edit_user/#{@user.id}", method: :post) do %>
  <p>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@user.name}",{class: "form-control"} %>
  </p>
  <p>
  <%= label_tag :email %>
  <%= text_field_tag :email, "#{@user.email}",{class: "form-control"}  %>
  </p>
  <p>
  <%= label_tag :admin %>
  <%= check_box_tag :admin, value=@user.admin,checked=@user.admin %>
  </p>
  <%= submit_tag %>
<% end %>
