
<div class="text-center page-title">
  <h5><%= @quiz.content %></h5>
</div>

  <div class="form-group test-middle-wrapper">
    <%= form_with(url:"/check/#{@quiz.id}", method: "post") do |form| %>
    <div class="container">
      <div class="row justify-content-center">
        <%= form.text_field :answer, class:"form-control col-6 col-md-4" %>
        <div class="col-3"><%= @quiz.answer_help %></div>
      </div>
    </div>

    <div class="test-submit-button mx-auto">
    <%= form.submit :class =>"btn btn-outline-secondary" %>
    </div>
    <% end %>
  </div>

  
